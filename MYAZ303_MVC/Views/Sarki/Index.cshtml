@model IEnumerable<Film>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="col-6">
                Film Listesi
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Sarki" asp-action="Create" class="btn btn-primary">Ekle</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Film Adı
            </th>
            <th>
                Süre
            </th>
            <th>
                Yönetmne
            </th>
            <th>
                Kategori
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.filmAd
                </td>
                <td>
                    @obj.sure
                </td>
                <td>
                    @obj.yonetmen
                </td>
                <td>
                    @obj.katogeri
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Film" asp-action="Edit" asp-route-id="@obj.filmID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Güncelle</a>
                    </div>
                </td>
                    <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Film" asp-action="Delete" asp-route-id="@obj.filmID" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i>Sil</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>